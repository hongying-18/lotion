{
  "name": "@dashibase/lotion",
  "version": "0.1.5",
  "type": "module",
  "main": "lib/lolo.js",
  "types": "types/src/index.d.ts",
  "files": [
    "lib/",
    "types/src/*"
  ],
  "keywords": [
    "vue",
    "notion",
    "editor",
    "markdown"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "build-bundle": "tsc && vite build --mode library && npx tailwind -c ./tailwind.config.cjs -i ./src/index.css -o lib/style.css"
  },
  "dependencies": {
    "@tiptap/extension-bold": "^2.12.0",
    "@tiptap/extension-document": "^2.12.0",
    "@tiptap/extension-history": "^2.12.0",
    "@tiptap/extension-italic": "^2.12.0",
    "@tiptap/extension-link": "^2.12.0",
    "@tiptap/extension-paragraph": "^2.12.0",
    "@tiptap/extension-placeholder": "^2.12.0",
    "@tiptap/extension-text": "^2.12.0",
    "@tiptap/starter-kit": "^2.12.0",
    "@tiptap/vue-3": "^2.12.0",
    "fuse.js": "^7.1.0",
    "oh-vue-icons": "1.0.0-rc3",
    "uuid": "^11.1.0",
    "vue": "^3.5.13",
    "vue-draggable-next": "^2.2.1"
  },
  "devDependencies": {
    "@babel/types": "^7.27.1",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@types/node": "^22.15.17",
    "@types/sortablejs": "^1.15.8",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.1.3",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^17.4.7",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.6",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.1.3",
    "vue-tsc": "^2.2.10"
  }
}
